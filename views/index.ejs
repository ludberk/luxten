    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="bi bi-ui-checks"></i>Mal Əlavə elə</h1>
          <p>Mal Əlavə Etmək üçün səhifəsi</p>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
          <li class="breadcrumb-item">Mal əlavə</li>
          <li class="breadcrumb-item"><a href="#">Mal Əlavə Etmək üçün əlavələr</a></li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="row">
              <div class="col-lg-6">
                <div class="mb-3">
                  <h4>Mal Əlavə et</h4>
                  <form action="/upload" method="POST" enctype="multipart/form-data">
                    <label class="form-label" for="productName">Mal Adı:</label>
                    <input class="form-control" id="productName" type="text" name="name" required>
                
                    <label class="form-label" for="productDescription">Mal Təsviri:</label>
                    <textarea class="form-control" id="productDescription" name="description" required></textarea>
                    <label class="form-check-label" for="trend">Trend Mal:</label>
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" id="trend" name="trend" value="true" <% if (products.trend) { %> Trend Mal: checked<% } %>>
                    </div>
                    <label for="New">Yeni Mal:</label>
                    <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="New" name="New" value="true"  <% if (products.trend) { %> Trend Mal: checked<% } %>>
                    </div>
                    <label class="form-label" for="productCategory">Kategoriya:</label>
                    <select class="form-control" id="productCategory" name="categoryId" required>
                      <% categories.forEach(category => { %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                      <% }); %>
                    </select>
                
                    <label class="form-label" for="productImage">Mal Üçün Rəsim:</label>
                    <input class="form-control" id="productImage" type="file" name="image" accept="image/*" required>
                
                    <button type="submit" class="btn btn-primary">Əlavə et</button>
                  </form>
              </div>
              <div class="col-lg-4 offset-lg-1">
                <form>
                  <div class="mb-3">
                  </div>
                  </div>
                  </div>
                </form>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
    <% products.forEach(product => { %>
          <div class="col-lg-4 ">
            <div class="bs-component">
              <div class="card">
                <h4 class="card-header">Adı: <%= product.name %></h4>
                <div class="card-body">
                  <p>Təsvir: <%= product.description %></p>
                </div>
                <img style="height: 200px; width: 100%; display: block;" src="<%= product.imageUrl %>" alt="<%= product.name %> Şəkli">
                <div class="card-body">
                  <a class="btn btn-primary" href="/edit/<%= product._id %>">Rədaktə et</a>
                  <form action="/delete/<%= product._id %>" method="POST">
                    <button type="submit" class="btn btn-danger">
                      <i class="fa fa-close"></i> Sil
                    </button>
                  </form>
                </div>
            </div>
          </div>
      </div>
    <% }); %>
