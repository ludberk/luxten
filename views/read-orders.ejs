    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="bi bi-table"></i>Message Table</h1>
          <p>Message Pages</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
          <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
          <li class="breadcrumb-item">Table</li>
          <li class="breadcrumb-item active"><a href="#">Messages Table</a></li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="tile-body">
              <div class="table-responsive">
                <table class="table table-hover table-bordered" id="sampleTable">
                  <thead>
                    <tr>
                      <th>First Name Last Name</th>
                      <th>Number</th>
                      <th>Message</th>
                      <th>actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% readOrders.forEach(function (readOrder) { %>
                      <tr>
                        <td><%= readOrder.adSoyad %></td>
                        <td><%= readOrder.mobilNomre %></td>
                        <td><%= readOrder.tesvir %></td>
                        <td>
                            <a href="#" class="delete-order" data-order-id="<%= readOrder._id %>" ><i class="fas fa-trash"></i></a>
                        </td>                        
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
                <div class="row d-print-none mt-2">
                  <div class="col-12 text-end"><a class="btn btn-primary" href="javascript:window.print();"><i class="bi bi-printer me-2"></i> Print</a></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const deleteButtons = document.querySelectorAll(".delete-order");
  
          deleteButtons.forEach((button) => {
            button.addEventListener("click", function (event) {
              event.preventDefault();
              const orderId = button.getAttribute("data-order-id");
  
              const shouldDelete = confirm("Mesajı silmək istədiyinizə əminsiniz? (Səhifəni yeniləyin)");
  
              if (shouldDelete) {
                fetch(`/delete-read-order/${orderId}`, {
                  method: "POST",
                })
                  .then((response) => response.json())
                  .then((data) => {
                    if (data.success) {
                      location.reload();
                    } else {
                      alert("Mesaj silinmədi");
                    }
                  })
                  .catch((error) => {
                    console.error("Xəta", error);
                  });
              }
            });
          });
            function refreshTable() {
            location.reload();
          }
        });
      </script>
      
      
