    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="bi bi-ui-checks"></i>Add Products</h1>
          <p>Add Products Page</p>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
          <li class="breadcrumb-item">Add Product</li>
          <li class="breadcrumb-item"><a href="#">Add Product Extensions</a></li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="row">
              <div class="col-lg-6">
                <div class="mb-3">
                  <h4>Add Product</h4>
                  <form action="/add-category" method="POST" enctype="multipart/form-data">
                    <label class="form-label" for="name">Category Name:</label>
                    <input class="form-control" id="name" type="text" name="name" required>

                    <label class="form-label" for="imageUrl">İmage For Category:</label>
                    <input class="form-control" id="imageUrl" type="file" name="imageUrl" accept="image/*" required>
                
                    <button type="submit" class="btn btn-primary">Add</button>
                  </form>
              </div>
              <div class="col-lg-4 offset-lg-1">
                <form>
                  <div class="mb-3">
                  </div>
                  </div>
                  </div>
                </form>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
    <% categories.forEach(category => { %>
          <div class="col-lg-4 ">
            <div class="bs-component">
              <div class="card">
                <h4 class="card-header">Name: <%= category.name %></h4>
                <div class="card-body">
                </div>
                <img style="height: 200px; width: 100%; display: block;" src="<%= category.imageUrl %>" alt="<%= category.name %> Şəkli">
                <div class="card-body">
                  <a class="btn btn-primary" href="/edit-category/<%= category._id %>">Edit</a>
                  <form action="/delete-category/<%= category._id %>" method="POST">
                    <button type="submit" class="btn btn-danger">
                      <i class="fa fa-close"></i> Delete
                    </button>
                  </form>
                </div>
            </div>
          </div>
      </div>
    <% }); %>
      <!-- Dialogs -->
  

    </main>
