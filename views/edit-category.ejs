      <div class="row">
        <div class="col-md-6">
          <div class="tile">
            <h3 class="tile-title">Kategoriya</h3>
            <div class="tile-body">
               <h2>Kategoriya Rədaktə et</h2>

               <form id="editCategoryForm" action="/edit-category/<%= categori._id %>" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Kategori Adı:</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= categori.name %>" required>
                </div>
                <div class="form-group">
                    <label for="imageUrl">Kategori Resmi:</label>
                    <input type="file" class="form-control-file" id="imageUrl" name="imageUrl" accept="image/*" >
                </div>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
            
              
            
            </div>
