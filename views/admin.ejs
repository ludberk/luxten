        <li class="app-search">
          <input class="app-search__input" type="search" placeholder="Search">
          <button class="app-search__button"><i class="bi bi-search"></i></button>
        </li>
        <!-- User Menu-->
        <li class="dropdown"><a class="app-nav__item" href="#" data-bs-toggle="dropdown" aria-label="Open Profile Menu"><i class="bi bi-person fs-4"></i></a>
          <ul class="dropdown-menu settings-menu dropdown-menu-right">
            <!-- <li><a class="dropdown-item" href="page-user.html"><i class="bi bi-gear me-2 fs-5"></i> Settings</a></li> -->
            <!-- <li><a class="dropdown-item" href="page-user.html"><i class="bi bi-person me-2 fs-5"></i> Profile</a></li> -->
            <li><a class="dropdown-item" href="page-login.html"><i class="bi bi-box-arrow-right me-2 fs-5"></i> Logout</a></li>
          </ul>
        </li>
      </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
      <ul class="app-menu">
    
        <li class="treeview is-expanded">
          <a class="app-menu__item" href="#" data-toggle="treeview">
            <i class="app-menu__icon bi bi-plus-circle"></i><span class="app-menu__label">Mal Əlavə et</span><i class="treeview-indicator bi bi-chevron-right"></i>
          </a>
          <ul class="treeview-menu">
            <li><a class="treeview-item" href="/add/product"><i class="icon bi bi-plus-circle"></i>Mal Əlavə et</a></li>
            <li><a class="treeview-item active" href="/admin"><i class="icon bi bi-plus-circle"></i>Qaleriyaya Mal Əlavə et</a></li>
          </ul>
        </li>
    
        <li class="treeview">
          <a class="app-menu__item" href="#" data-toggle="treeview">
            <i class="app-menu__icon bi bi-table"></i><span class="app-menu__label">Sifariş Tablosu</span><i class="treeview-indicator bi bi-chevron-right"></i>
          </a>
          <ul class="treeview-menu">
            <li><a class="treeview-item" href="/orders/admin"><i class="icon bi bi-table"></i><i class="bi bi-cart3"></i>Sifariş Tablosu</a></li>
            <li><a class="treeview-item" href="/read-orders"><i class="icon bi bi-check-circle"></i>Oxunmuş Sifarişlər Tablosu</a></li>
          </ul>
        </li>
    
        <li class="treeview">
          <a class="app-menu__item" href="#" data-toggle="treeview">
            <i class="app-menu__icon bi bi-list"></i><span class="app-menu__label">Kategoriya</span><i class="treeview-indicator bi bi-chevron-right"></i>
          </a>
          <ul class="treeview-menu">
            <li><a class="treeview-item" href="/add-category"><i class="icon bi bi-list"></i>Kategoriya Əlavə et</a></li>
          </ul>
        </li>
      </ul>
    </aside>
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="bi bi-ui-checks"></i>Mal Əlavə elə</h1>
          <p>Mal Əlavə Etmək üçün səhifəsi</p>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
          <li class="breadcrumb-item">Mal əlavə</li>
          <li class="breadcrumb-item"><a href="#">Mal Əlavə Et</a></li>
        </ul>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="mb-3">
              <h4>Mal Əlavə et</h4>
              <form action="/admin/add-gallery-item" method="POST" enctype="multipart/form-data">
                <label class="form-label" for="title">Adı:</label>
                <input class="form-control" id="title" type="text" name="title">
              
                <label class="form-label" for="description">Mal Təsviri:</label>
                <textarea class="form-control" id="description" name="description"></textarea>
              
                <label class="form-label" for="productImage">Mal Üçün Rəsim:</label>
                <input class="form-control" id="productImage" type="file" name="image" accept="image/*" >
    
                <button type="submit" class="btn btn-primary">Əlavə et</button>
              </form>
              
          </div>
      </div>
      
      <div class="row">
    <% galleryItems.forEach(item => { %>
          <div class="col-lg-4 ">
            <div class="bs-component">
              <div class="card">
                <h4 class="card-header">Adı: <%= item.title %></h4>
                <div class="card-body">
                  <p>Təsvir: <%= item.description%></p>
                </div>
                <img style="height: 200px; width: 100%; display: block;" src="<%= item.imageUrl %>" alt="<%= item.title %> Şəkli">
                <div class="card-body">
                    <button class="btn btn-primary">
               <a href="/admin/edit/<%= item._id %>" style="color: aliceblue;">Redaktə et</a>
            </button>
               <a href="/admin/delete/<%= item._id %>"></a>
                    <button type="submit" class="btn btn-danger">
                    <a href="/admin/delete/<%= item._id %>" style="color: aliceblue;">sil</a>
                      <i class="fa fa-close"></i>
                    </button>
                </div>
            </div>
          </div>
      </div>
    <% }); %>
      <!-- Dialogs -->
  

    </main>
    <!-- Essential javascripts for application to work-->
    <script src="/assets/js/jquery-3.7.0.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/main.js"></script>
